<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthEditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/neutral_grey</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AuthButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#32333A</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>
</resources>